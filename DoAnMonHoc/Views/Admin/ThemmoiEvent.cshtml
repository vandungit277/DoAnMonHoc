@model DoAnMonHoc.Models.EVENT

@{
    ViewBag.Title = "Thêm mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm sự kiện mới</h2>

@using (Html.BeginForm("ThemmoiEvent", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TEN_EVENT, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="TEN_EVENT" required />
                @Html.ValidationMessageFor(model => model.TEN_EVENT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HINH_EVENT, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="HinhAnh" />
                <p style="color:red">@ViewBag.HinhAnh</p>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm sự kiện" class="btn btn-default" /> |
                @Html.ActionLink("Quay lại danh sách sự kiện", "DS_Event")
            </div>
        </div>
    </div>
}