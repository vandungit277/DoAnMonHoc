@using DoAnMonHoc.Models
@using PagedList.Mvc;
@model PagedList.PagedList<EVENT>

@{
    ViewBag.Title = "DS Sự kiện";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách các sự kiện đang diễn ra</h2>
<hr />
<p>
    @Html.ActionLink("Thêm sự kiện", "ThemmoiEvent")
</p>
<table class="table" border="1">
    <tr>
        <th class="col-md-4" style="text-align:center">Tên sự kiện</th>
        <th class="col-md-" style="text-align:center">Hình ảnh sự kiện</th>
        <th class="col-md-1" style="text-align:center"></th>
        <th class="col-md-2" style="text-align:center"></th>
        <th class="col-md-1" style="text-align:center"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TEN_EVENT)
            </td>
            <td>
                <img src="@Url.Content("~/HinhEvent/" + item.HINH_EVENT)" style="height:100px;width:auto" />
            </td>
            <td class="col-md-1" style="text-align:center">
                @Html.ActionLink("Sửa", "SuaEvent", new { id = item.MA_EVENT })
            </td>
            <td class="col-md-1" style="text-align:center">
                @Html.ActionLink("Chi tiết", "ChitietEvent", new { id = item.MA_EVENT })
            </td>
            <td class="col-md-1" style="text-align:center">
                @Html.ActionLink("Xóa", "XoaEvent", new { id = item.MA_EVENT })
            </td>
        </tr>
    }

</table>
<div class="MenuTrang" style="text-align:right">
    @Html.PagedListPager(Model, page => Url.Action("DS_Event", new { page = page }))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }
</style>

