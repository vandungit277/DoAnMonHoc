@model DoAnMonHoc.Models.LOAIDIENTHOAI

@{
    ViewBag.Title = "Xóa";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xác nhận thông tin loại điện thoại</h2>

<h3>Bạn có thực sự muốn xóa loại điện thoại này?</h3>
<div class="col-md-6">
    <hr />
    <table class="table" border="1">
        <tr>
            <td class="col-md-4">
                Tên loại điện thoại:
            </td>

            <td class="col-md-8">
                @Html.DisplayFor(model => model.TEN_LDT)
            </td>
        </tr>
        <tr>
            <td class="col-md-4">
                Tên nhà cung cấp:
            </td>

            <td class="col-md-8">
                @Html.DisplayFor(model => model.NHACUNGCAP.TEN_NCC)
            </td>
        </tr>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Đồng ý xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại", "Index")
        </div>
    }
</div>
