@model DoAnMonHoc.Models.EVENT

@{
    ViewBag.Title = "Xóa";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xác nhận thông tin sự kiện</h2>

<h3>Bạn có thực sự muốn xóa phụ kiện này?</h3>
<div class="col-md-12">
    <hr />
    <table class="table" border="1">
        <tr>
            <td class="col-md-4" style="font-weight:bold">
                Tên sự kiện:
            </td>

            <td class="col-md-8">
                @Html.DisplayFor(model => model.TEN_EVENT)
            </td>
        </tr>
        <tr>
            <td class="col-md-4" style="font-weight:bold">
                Hình ảnh sự kiện:
            </td>

            <td class="col-md-8">
                <img src="@Url.Content("~/HinhEvent/" + Model.HINH_EVENT)" style="height:120px;width:auto" />
            </td>
        </tr>
    </table>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Đồng ý xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại", "DS_Event")
        </div>
    }
</div>
