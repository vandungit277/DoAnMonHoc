
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Đăng nhập</title>
    <link rel="stylesheet" href="~/Content/css/style_2.css">
    <link rel="shortcut icon" type="image/x-icon" href="~/HinhHThong/icon.png" />

</head>
<body>
    <div class="container">
        <section id="content">
            <h1>Đăng nhập</h1>
            <h3 style="color:red">@ViewBag.ThongBao</h3>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <div>
                    <input type="text" placeholder="Tên tài khoản:" required="" id="username" name="username" />
                </div>
                <div>
                    <input type="password" placeholder="Mật khẩu:" required="" id="password" name="password" />
                </div>
                <div>
                    <input type="submit" value="Đăng nhập" />
                </div>
            }
        </section><!-- content -->
    </div><!-- container -->
    <script src="~/Scripts//js/js_admin.js"></script>
</body>
</html>
