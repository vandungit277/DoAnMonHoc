@using DoAnMonHoc.Models
@using PagedList.Mvc;
@model PagedList.PagedList<LOAIDIENTHOAI>
@{
    ViewBag.Title = "DS Loại Điện Thoại";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý thông tin loại điện thoại</h2>

<p>
    @Html.ActionLink("Thêm mới", "Themmoildt")
</p>
<div class="col-md-6">
    <table class="table" border="1">
        <tr>
            <th class="col-md-2" style="text-align:center">Tên loại điện thoại</th>
            <th class="col-md-2" style="text-align:center">Tên nhà cung cấp</th>
            <th class="col-md-1" style="text-align:center"></th>
            <th class="col-md-1" style="text-align:center"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TEN_LDT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NHACUNGCAP.TEN_NCC)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Sualdt", new { id = item.MA_LDT })
                </td>
                <td>
                    @Html.ActionLink("Xóa", "Xoaldt", new { id = item.MA_LDT })
                </td>
            </tr>
        }

    </table>
    <div class="MenuTrang" style="text-align:right">
        @Html.PagedListPager(Model, page => Url.Action("DS_LoaiDienThoai", new { page = page }))
    </div>
    <style>
        .MenuTrang li {
            display: inline;
        }
    </style>
</div>
